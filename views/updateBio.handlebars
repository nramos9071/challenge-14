      <label for="bio">Bio:</label>
      <textarea id="bio" name="bio" required>{{user.bio}}</textarea>
    </div>
    <input type="hidden" id="user-id" name="user-id" value="{{user.id}}">
    <button type="submit">Update Bio</button>
  </form>
  <script src="/js/updateBio.js"></script>

<script src="/js/updateBio.js"></script>
</body>
</html>
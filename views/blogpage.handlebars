<div>
    <section>
      <article>
        <h2>{{blog.title}}</h2>
        <p>{{blog.content}}</p>
        <p>Author: {{blog.author}}</p>
        <p>Date Created: {{blog.date_created}}</p>
      </article>
      <hr>
      <h3>Comments</h3>
      <section>
        {{#each blog.comments}}
          <div>
            <p><strong>{{this.author}}</strong> on {{this.date_created}}</p>
            <p>{{this.content}}</p>
          </div>
        {{/each}}
      </section>
    </section>
  </div>